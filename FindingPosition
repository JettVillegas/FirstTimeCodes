	#include <iostream>
	
	using namespace std;
	
	int main()
	{
	  int n, i, search;
		cout << "ENTER THE SIZE OF ELEMENTS: ";
		cin >> n;
		
		int array[n];
		for (int i = 0; i < n; i++)
		{
			cout << "ENTER ELEMENT #" << i+1 << ": ";
			cin >> array[i];
		}
		
		cout << "ENTER ELEMENT TO SEARCH: ";
		cin >> search;
		
		for (int i = 0; i < n; i++)
		{
			if (array[i] == search)
			{
				cout << "The element " << search << " is found at position " << i + 1;
				break;
			}
		}
	}
